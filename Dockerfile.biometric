FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir uvicorn fastapi numpy scipy httpx pydantic

COPY apps/api/hybrid_biometric_api.py .

EXPOSE 8009

CMD ["python", "-m", "uvicorn", "hybrid_biometric_api:app", "--host", "0.0.0.0", "--port", "8009"]
