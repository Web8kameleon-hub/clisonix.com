FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements/base.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt 2>/dev/null || pip install --no-cache-dir uvicorn fastapi httpx 2>/dev/null || true

COPY services/intelligence_hub.py .

EXPOSE 8013

CMD ["python", "-m", "uvicorn", "intelligence_hub:app", "--host", "0.0.0.0", "--port", "8013"]
