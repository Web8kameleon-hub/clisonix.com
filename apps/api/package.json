{
  "name": "@neurosonix/backend",
  "version": "1.0.0",
  "description": "NeuroSonix Industrial Backend - Production Ready",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "deploy": "npm run build && npm start",
    "docker:build": "docker build -t neurosonix-backend .",
    "docker:run": "docker run -p 8088:8088 neurosonix-backend",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "tsx": "^4.0.0",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}