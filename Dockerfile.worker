# Dockerfile for Clisonix-worker (Python)
FROM python:3.11-slim
WORKDIR /worker
COPY worker/ /worker/
COPY apps/api/requirements.txt /worker/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt
CMD ["python", "-u", "main.py"]
