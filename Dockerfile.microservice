# Clisonix Python Service Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    httpx \
    pydantic

# Copy stub files
COPY docker-stubs/ /app/stubs/

# Default command (override in docker-compose)
CMD ["python", "-m", "uvicorn", "stubs.service_stub:app", "--host", "0.0.0.0", "--port", "8000"]
