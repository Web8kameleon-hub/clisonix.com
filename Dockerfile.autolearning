# Dockerfile for Clisonix Auto-Learning Service
# Production-grade, optimized for Hetzner deployment

FROM python:3.11-slim

# Labels
LABEL maintainer="Clisonix Team"
LABEL description="Production Auto-Learning Connector"
LABEL version="1.0.0"

# Set working directory
WORKDIR /app

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    HETZNER_API_URL=http://clisonix-api:8000

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (for layer caching)
COPY requirements-autolearning.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-autolearning.txt

# Copy application code
COPY production_autolearning_connector.py .
COPY ocean-core/ ./ocean-core/

# Create learned_knowledge directory
RUN mkdir -p /app/ocean-core/learned_knowledge

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run as non-root user
RUN useradd -m -u 1000 clisonix && chown -R clisonix:clisonix /app
USER clisonix

# Default command
CMD ["python", "production_autolearning_connector.py", "--interval", "1.0"]
