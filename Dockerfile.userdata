FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements/base.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt 2>/dev/null || pip install --no-cache-dir uvicorn fastapi redis sqlalchemy asyncpg 2>/dev/null || true

COPY apps/api/user_data_api.py .

EXPOSE 8010

CMD ["python", "-m", "uvicorn", "user_data_api:app", "--host", "0.0.0.0", "--port", "8010"]
