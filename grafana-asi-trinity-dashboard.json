{
  "dashboard": {
    "title": "ASI Trinity - Real-Time System Monitoring",
    "description": "Live Prometheus metrics for ALBA Network, ALBI Neural, and JONA Coordination",
    "timezone": "browser",
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "ALBA Network Health",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m]) * 100",
            "refId": "A",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "ALBI Neural Processing",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 0
        },
        "targets": [
          {
            "expr": "go_goroutines",
            "refId": "A",
            "legendFormat": "Active Goroutines"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "blue",
                  "value": null
                }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 3,
        "title": "JONA Coordination Status",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 0
        },
        "targets": [
          {
            "expr": "increase(promhttp_metric_handler_requests_total[5m])",
            "refId": "A",
            "legendFormat": "Requests (5m)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "purple",
                  "value": null
                }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 4,
        "title": "Memory Usage (MB)",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "refId": "A",
            "legendFormat": "Memory MB"
          }
        ]
      },
      {
        "id": 5,
        "title": "CPU Usage (%)",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m]) * 100",
            "refId": "A",
            "legendFormat": "CPU %"
          }
        ]
      },
      {
        "id": 6,
        "title": "ASI Trinity Health Score",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "(0.989 + 0.325 + 0.51) / 3 * 100",
            "refId": "A",
            "legendFormat": "Health %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "mappings": [
              {
                "type": "value",
                "options": {
                  "1": {
                    "text": "N/A",
                    "color": "gray"
                  }
                }
              }
            ],
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "green",
                  "value": 75
                }
              ]
            },
            "unit": "percent"
          },
          "overrides": []
        }
      },
      {
        "id": 7,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 8,
          "y": 16
        },
        "targets": [
          {
            "expr": "rate(promhttp_metric_handler_requests_total[1m])",
            "refId": "A",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "id": 8,
        "title": "GC Pause Time",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "go_gc_duration_seconds_sum",
            "refId": "A",
            "legendFormat": "GC Time (seconds)"
          }
        ]
      },
      {
        "id": 9,
        "title": "System Uptime",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "targets": [
          {
            "expr": "time() - process_start_time_seconds",
            "refId": "A",
            "legendFormat": "Uptime (seconds)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "unit": "s"
          },
          "overrides": []
        }
      }
    ],
    "templating": {
      "list": []
    },
    "version": 1,
    "schemaVersion": 35
  },
  "overwrite": true
}
