{
  "name": "neurosonix-mono",
  "version": "1.0.0",
  "description": "NeuroSonix AI Platform - Unified Mono Repository",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:signal-gen": "cd packages/signal-gen/backend && npm run dev",
    "dev:demo-api": "C:/neurosonix-cloud/.venv/Scripts/python.exe demo_api_server.py",
    "demo": "concurrently \"npm run dev:signal-gen\" \"npm run dev:demo-api\" \"npm run dev:web\"",
    "build": "npm run build:web && npm run build:api",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && echo 'API build complete'",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:web": "cd apps/web && npm start",
    "start:api": "cd apps/api && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "test": "npm run test:web && npm run test:api",
    "test:web": "cd apps/web && npm test",
    "test:api": "cd apps/api && python -m pytest",
    "lint": "npm run lint:web",
    "lint:web": "cd apps/web && npm run lint",
    "clean": "rimraf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next",
    "reset": "npm run clean && npm install",
    "setup": "npm install && npm run setup:packages",
    "setup:packages": "npm run setup:shared && npm run setup:ui && npm run setup:agi-brain && npm run setup:neurosonix",
    "setup:shared": "cd packages/shared && npm install",
    "setup:ui": "cd packages/ui && npm install",
    "setup:agi-brain": "cd packages/agi-brain && npm install",
    "setup:neurosonix": "cd packages/neurosonix && npm install"
  },
  "devDependencies": {
    "@types/clamscan": "^2.4.1",
    "@types/file-type": "^10.6.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "postcss": "^8.4.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "axios": "^1.12.2",
    "clamscan": "^2.4.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "docs": "^0.3.2-canary.0",
    "express": "^5.1.0",
    "fastify": "^5.6.1",
    "ffprobe-static": "^3.1.0",
    "file-type": "^21.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.1.0",
    "mesh": "^7.0.3",
    "modules": "^0.4.0",
    "next": "^15.5.4",
    "nodes": "^0.1.0",
    "offline": "^0.0.1",
    "ping": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "solana": "^3.0.0",
    "spacy": "^0.0.4",
    "typescript": "^5.0.2",
    "uuid": "^13.0.0",
    "uux": "^0.0.0",
    "zod": "^4.1.12"
  }
}
