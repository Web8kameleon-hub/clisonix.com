# ============================================
# CLISONIX CLOUD - ENVIRONMENT TEMPLATE
# ============================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control!

# ---- API Configuration ----
API_SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
ALLOWED_API_KEYS=key1,key2,key3

# ---- JWT ----
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# ---- Database ----
POSTGRES_USER=clisonix
POSTGRES_PASSWORD=your-db-password-here
POSTGRES_DB=clisonixdb
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://clisonix:password@localhost:5432/clisonixdb

# ---- Redis ----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://default:password@localhost:6379/0

# ---- Neo4j ----
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ---- Vector DB ----
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-key

# ---- InfluxDB (Time Series) ----
INFLUXDB_URL=http://localhost:8086
INFLUXDB_ORG=clisonix
INFLUXDB_BUCKET=metrics
INFLUXDB_TOKEN=your-influxdb-token

# ---- MinIO Storage ----
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_SECURE=false

# ---- Keycloak Auth ----
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=neurosonix
KEYCLOAK_CLIENT_ID=clisonix-app
KEYCLOAK_CLIENT_SECRET=your-keycloak-secret

# ---- Payment Gateways ----
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
PAYPAL_BASE=https://api-m.sandbox.paypal.com

STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-webhook-secret

# ---- Third-party APIs ----
YOUTUBE_API_KEY=your-youtube-api-key
GITHUB_TOKEN=your-github-token

# ---- Monitoring ----
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin
LOKI_URL=http://localhost:3100

# ---- Application ----
APP_ENV=development
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3004
