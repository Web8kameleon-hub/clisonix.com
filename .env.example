# Clisonix Cloud Industrial Backend - Environment Variables
# COPY THIS FILE TO .env AND FILL WITH YOUR SECURE DATA

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name
REDIS_URL=redis://localhost:6379/0

# Business Configuration (SECURE - NEVER COMMIT THESE VALUES)
BUSINESS_OWNER=Your_Name
SEPA_IBAN=YOUR_IBAN_HERE
SEPA_BIC=YOUR_BIC_HERE
SEPA_BANK=Your_Bank_Name
PAYPAL_EMAIL=your@email.com

# Security & Authentication
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# System Configuration
ENVIRONMENT=production
DEBUG=false
API_VERSION=1.0.0
API_TITLE=Clisonix Industrial Backend
LOG_LEVEL=info

# WARNING: Never commit .env file to version control!
# Add .env to your .gitignore file