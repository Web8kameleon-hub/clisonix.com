{
  "info": {
    "name": "Clisonix Cloud API – Auth Folder",
    "description": "Authentication endpoints with auto-token capture",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login successful (2xx)', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "pm.test('Response contains required fields', function () {",
                  "  let json = pm.response.json();",
                  "  pm.expect(json).to.have.property('token');",
                  "  pm.expect(json).to.have.property('refresh_token');",
                  "  pm.expect(json).to.have.property('api_key');",
                  "  pm.expect(json).to.have.property('expires_in');",
                  "});",
                  "",
                  "// Auto-capture tokens and API key",
                  "let json = pm.response.json();",
                  "if (json.token) {",
                  "  pm.environment.set('auth_token', json.token);",
                  "  console.log('✓ Token saved to auth_token');",
                  "}",
                  "if (json.refresh_token) {",
                  "  pm.environment.set('refresh_token', json.refresh_token);",
                  "  console.log('✓ Refresh token saved');",
                  "}",
                  "if (json.api_key) {",
                  "  pm.environment.set('api_key', json.api_key);",
                  "  console.log('✓ API key saved');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"user@example.com\", \"password\": \"your-password-here\"}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Refresh successful (2xx)', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "pm.test('Response contains new token', function () {",
                  "  let json = pm.response.json();",
                  "  pm.expect(json).to.have.property('token');",
                  "  pm.expect(json).to.have.property('expires_in');",
                  "});",
                  "",
                  "// Auto-capture new token",
                  "let json = pm.response.json();",
                  "if (json.token) {",
                  "  pm.environment.set('auth_token', json.token);",
                  "  console.log('✓ New token saved to auth_token');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"refresh_token\": \"{{refresh_token}}\"}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "refresh"
              ]
            }
          }
        },
        {
          "name": "Create API Key",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('API key creation successful (2xx)', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "pm.test('Response contains API key', function () {",
                  "  let json = pm.response.json();",
                  "  pm.expect(json).to.have.property('api_key');",
                  "  pm.expect(json).to.have.property('label');",
                  "  pm.expect(json).to.have.property('created_at');",
                  "});",
                  "",
                  "// Auto-capture API key",
                  "let json = pm.response.json();",
                  "if (json.api_key) {",
                  "  pm.environment.set('api_key', json.api_key);",
                  "  console.log('✓ New API key saved');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"label\": \"my-production-server\"}"
            },
            "url": {
              "raw": "{{base_url}}/auth/api-key",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "api-key"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://api.clisonix.com",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "",
      "type": "string"
    }
  ]
}
