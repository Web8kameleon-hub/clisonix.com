FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install dependencies directly
RUN pip install --no-cache-dir uvicorn fastapi numpy scipy python-multipart pydantic

COPY neurosonix_industrial_api.py .

EXPOSE 8006

CMD ["python", "-m", "uvicorn", "neurosonix_industrial_api:app", "--host", "0.0.0.0", "--port", "8006"]
