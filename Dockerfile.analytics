FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install dependencies directly
RUN pip install --no-cache-dir uvicorn fastapi pandas numpy scikit-learn pydantic

COPY advanced_analytics_api.py .

EXPOSE 8007

CMD ["python", "-m", "uvicorn", "advanced_analytics_api:app", "--host", "0.0.0.0", "--port", "8007"]
